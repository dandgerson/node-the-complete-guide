extends layouts/main-layout.pug

block content
  main
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://placebear.com/g/300/400", alt="A Book")
            .card__content
              h2.product__price $19.99
              p.product__desctiption A vary intresting book about so many even more intresting things!
            .card__actions
              button.btn Add to Cart
    else
      h1 No Products